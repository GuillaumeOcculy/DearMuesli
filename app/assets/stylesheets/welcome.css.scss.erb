@font-face {
  font-family: 'miso';
  src:url('<%= asset_path("miso.otf") %> ');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'miso-bold';
  src:url('<%= asset_path("miso-bold.otf") %> ');
  font-weight: normal;
  font-style: normal;
}


$font-family-sans-serif: 					'miso', 'Helvetica Neue', Helvetica, Arial, sans-serif;;
$font-size-h1: 								70px;
$font-size-h2:								23px;
$font-size-h3:								40px;

@import "bootstrap";

body{
	text-align: center;
}
.big-header{
	height: 660px;
	background-image:url('<%= asset_path("bg-header.jpg") %> ');
	background-size: cover;
  	background-repeat: no-repeat;
  	background-position: bottom;
	border-bottom: 2px solid #ca2927;

	.container{
		padding: 0px;
	}

	.pre-header{
		margin-top: 30px;

		img.logo{
			float: left;
			margin-top: -50px;
			margin-left : -60px;
		}

		a.btn{
			width: 150px;
			float: right;
			background-color: transparent;
			color : white;
			border: 1px solid white;
		}

		a.btn:hover{
			background-color: white;
			color: black;
		}

    p{
      float: right;
      color: white;
      margin-left: 15px;
      margin-top: 7px;
      font-size: 18px;
    }
	}


	section{
		margin-top: 189px;
		h1,h2{
		color: white;
		display: inline-block;
		text-shadow: 0px 0px 8px black;
		}

		h1{
			margin-left: -180px;
		}

		.form-group{
			margin-top: 50px;
			border-radius: 19px;
		}

		.form-control{
			width: 400px;
			height: 40px;
			display: inline-block;
			font-size: 20px;

			border: white;
		}

		.btn-danger{
			height: 50px;
      padding-left: 25px;
      padding-right: 25px;
      font-size: 30px;
      border-radius: 19px;
      background-color: #e74c3c;
		}

		.btn-danger:hover{
			border-color: white
		}

		.alert{
			margin-top: 10px;
		}
	}
}
.small-header{
	background-image:url('<%= asset_path("order-our-recipes.jpg") %> ');
	background-size: cover;
  	background-repeat: no-repeat;
  	background-position: bottom;
	border-bottom: 2px solid #ca2927;
	.container{
		padding: 0px;
	}
	.pre-header{
		margin-top: 30px;

		img.logo{
			float: left;
			margin-top: -50px;
			margin-left : -60px;
		}

		a.btn{
			width: 150px;
			float: right;
			background-color: transparent;
			color : white;
			border: 1px solid white;
		}

    p{
      float: right;
    }

		a.btn:hover{
			background-color: white;
			color: black;
		}
	}
	h1{
		margin-left: 0px;
		margin-bottom: 40px;
		margin-top: 0.67em;
		color: #fff;
	}
}
#orders{
	section{
		margin-top: 0px;
	}
	.page-header {
		margin-top: 10px;
		margin-bottom: 0px;
		padding-bottom: 0px;
		h3{
			margin-top: 10px;
		}
	}
	.input-paypal{
		margin-bottom: 25px !important;
		margin-left: 20px !important;
		display: inline-block !important;
	}
	.table-paypal{
		font-family: "miso-bold" !important;
		font-size: 25px !important;
		display: inline-block !important;
	}
	.row{
		margin-top: 100px;
		margin-bottom: 100px;
	}
}


img.ble{
	/*width: 1000px;*/
	margin-top: -45px;
}

section{

	.row{
		margin-right: 0px;

		.picture{
			display: inline-block;
			padding: 0 15px;
		}
	}
	img{
		border-radius: 5%;
	}

	img.chiffres{
			width: 100%;
		}

	p{
		margin-top: 10px;
		font-family: "miso-bold";
		font-size: 25px;
	}


}

.pre-order{
	background-image:url('<%= asset_path("order-our-recipes.jpg") %> ');
	background-size: cover;
	background-position: 50% 70%;
	height: 300px;
	h1{
		padding-top: 80px;
		text-shadow: 0px 0px 8px black;
		a{
			color: white;
			&:hover{
				color: white;
			}
		}
	}
}

footer{

	.pre-footer{

		background-image:url('<%= asset_path("bg-footer.jpg") %> ');
		background-size: cover;
		height: 300px;

		border-bottom: 2px solid #ca2927;

		.joinus{
			margin-top: 130px;
			margin-left: 30px;

			img{
				margin-top: -20px;
			}
		}
		p{
			float: left;
			margin-left: 40px;
			color: white;
			font-weight: bold;
			font-size: 30px;
		}

	}

	.navbar-bottom{
		margin-top: 30px;
		height: 100px;

		p{
			font-family: "miso-bold";
			font-size: 25px;

			a{
			text-decoration: none;
			color: black
			}
		}


		small{
			font-size: 20px;
			a{
				text-decoration: none;
				color: #428bca;
			}
		}
	}



}
