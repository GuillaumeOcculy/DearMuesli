@import url(http://fonts.googleapis.com/css?family=Abel);

$font-family-sans-serif: 					'Abel', 'Helvetica Neue', Helvetica, Arial, sans-serif;;
$font-size-h1: 								70px;
$font-size-h2:								30px;
$font-size-h3:								40px;

@import "bootstrap";

body{
	text-align: center;
}
header{
	height: 535px;
	width: 100%;
	background-image:url('<%= asset_path("bg-header.jpg") %> ');
	background-size: cover;
	.pre-header{
		margin-top: 30px;

		img.logo{
			float: left;
		}

		a.btn{
			float: right;
			background-color: transparent;
			color : white;
			border: 1px solid white;
		}
	}


	section{
		margin-top: 140px;
		h1,h2{
		color: white;
	}
	
		.form-group{
			margin-top: 50px;
			display: inline-block;
		}

		.form-control{
			width: 310px;
			display: inline-block;
		}

		.btn-danger{
			margin-top: -3px;
			margin-left: -77px;
			border: 1px solid white;
		}

		.alert{
			margin-top: 10px;
		}

	}

}
	img.ble{
			width: 100%;
			margin-top: -35px;
		}

section{
	.row{
		margin-right: 0px;
	}
	img{
		border-radius: 5%;
	}

	
}

footer{
	
	.pre-footer{

		background-image:url('<%= asset_path("bg-footer.jpg") %> ');
		background-size: cover;
		height: 300px;

		.joinus{
			margin-top: 129px;
		}
		p{
			float: left;
			margin-left: 40px;
			color: white;
			font-weight: bold;
			font-size: 30px;
		}
		
	}

	.navbar-bottom{
		margin-top: 30px;
		height: 100px;
	}

}