@font-face {
  font-family: 'miso';
  src:url('<%= asset_path("miso.otf") %> ');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'miso-bold';
  src:url('<%= asset_path("miso-bold.otf") %> ');
  font-weight: normal;
  font-style: normal;
}


$font-family-sans-serif: 					'miso', 'Helvetica Neue', Helvetica, Arial, sans-serif;;
$font-size-h1: 								70px;
$font-size-h2:								23px;
$font-size-h3:								40px;

@import "bootstrap";

body{
	text-align: center;
}
header{
	height: 535px;
	background-image:url('<%= asset_path("bg-header.jpg") %> ');
	background-size: cover;
	.container{
		padding: 0px;
	}
	.pre-header{
		margin-top: 30px;

		img.logo{
			float: left;
		}

		a.btn{
			width: 150px;
			float: right;
			background-color: transparent;
			color : white;
			border: 1px solid white;
		}

		a.btn:hover{
			background-color: white;
			color: black;
		}
	}


	section{
		margin-top: 140px;
		h1,h2{
		color: white;
		display: inline-block;
		}
		
		h2{
			margin-left: 120px;
		}
		.form-group{
			margin-top: 50px;
			display: inline-block;
		}

		.form-control{
			width: 310px;
			display: inline-block;
			font-size: 15px;
		}

		.btn-danger{
			margin-left: -70px;
			border: 1px solid white;
		}

		.btn-danger:hover{
			border-color: white
		}

		.alert{
			margin-top: 10px;
		}

		
		
	}

}
	img.ble{
			width: 100%;
			margin-top: -35px;
		}

section{
	.row{
		margin-right: 0px;
	}
	img{
		border-radius: 5%;
	}

	img.chiffres{
			width: 100%;
		}

	p{
		margin-top: 10px;
		font-family: "miso-bold";
		font-size: 25px;
	}

	
}

footer{
	
	.pre-footer{

		background-image:url('<%= asset_path("bg-footer.jpg") %> ');
		background-size: cover;
		height: 300px;

		.joinus{
			margin-top: 130px;
			margin-left: 30px;
		}
		p{
			float: left;
			margin-left: 40px;
			color: white;
			font-weight: bold;
			font-size: 30px;
		}
		
	}

	.navbar-bottom{
		margin-top: 30px;
		height: 100px;

		p{
			font-family: "miso-bold";
			font-size: 25px;
		}

		small{
			font-size: 20px;
			a{
				text-decoration: none
			}
		}
	}



}